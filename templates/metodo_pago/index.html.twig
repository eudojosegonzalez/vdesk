{% extends 'base2.html.twig' %}

{% block title %}Solicitidues de las Empresas Afiliadas{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <button type="button" id="sidebarCollapse" class="btn btn-dark mr-2">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand" href="#">
            <img src="{{ logo }}" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user-circle mr-1"></i> Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-cog mr-1"></i> Configuración</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-1"></i> Salir</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Sidebar -->
    {% include "bar_nav_dashboard_admin.html.twig" %}

    <!-- Contenido Principal -->
    <div id="content" style="padding:20px !important;">
        <div class="row">
            <div class='col-12 col-md-12 col-lg-12'>&nbsp;</div>
        </div>
        <div class="container-fluid p-4">
            <h2>Bienvenido al Sistema</h2>
            <p>Métodos de pagos registrados</p>
        </div>
        <div class="row">
            <div class='col-12 col-md-10 col-lg-10 text-right' style="margin: auto !important;">
                <a href="{{ path('app_metodo_pago_new') }}" title="Crear un nuevo Método de Pago"><i class="fas fa-plus-square"></i></a>
            </div>
        </div>        
        <div class="row">
            <div class='col-12 col-md-10 col-lg-10' style="margin: auto !important;">
                <table class="table table striped">
                    <thead>
                        <tr class="bg-secondary text-center">
                            <th>Id</th>
                            <th>Descripcion</th>
                            <th>Estado</th>
                            <th>Wallet/Monedero/Dirección</th>
                            <th>Descuento</th>
                            <th>Porcentaje</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for metodo_pago in metodo_pagos %}
                        <tr>
                            <td class='text-center'>{{ i }}</td>
                            <td>{{ metodo_pago.descripcion }}</td>
                            <td class='text-center'>
                                {% if ( metodo_pago.estado == 1 ) %}
                                    Activo
                                {% else %}
                                    Inactivo
                                {% endif %}    
                            </td>
                            <td>{{ metodo_pago.referencia }}</td>
                            <td>{{ metodo_pago.descuento }}</td>
                            <td>{{ metodo_pago.porcentaje }}</td>
                            <td class='text-center'>
                                <a href="{{ path('app_metodo_pago_show', {'id': metodo_pago.id}) }}"><i class="fas fa-edit"></i></a>
                                <a href="{{ path('app_metodo_pago_delete', {'id': metodo_pago.id}) }}"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-danger">No se han registrado Métodos de Pagos</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class='col-12 col-md-10 col-lg-10 text-right' style="margin: auto !important;">
                <a href="{{ path('app_metodo_pago_new') }}" title="Crear un nuevo Método de Pago"><i class="fas fa-plus-square"></i></a>
            </div>
        </div>        
    </div>
{% endblock %}

