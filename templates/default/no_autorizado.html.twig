    <form action="{{ path('app_login') }}" method="post">
        <div classs="col-12 col-sm-10 col-md-8 col-lg-4 offset-sm-1 offset-md-2 offset-lg-1" align='center'>
            <div>
                <div class="card centrado">
                    <div class="card-header text-center">
                        <h3>Entrada al sistema</h3>
                    </div>
                    <div class="card-body">

                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12">
                                    <label for="__sername">Email:</label>
                                    <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control" autocomplete="email" required autofocus/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12">
                                    <label for="password">Password:</label>
                                    <input type="password" id="password" name="_password" class="form-control" autocomplete="current-password" required />
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                </div>
                            </div>
                            <input type="hidden" name="_target_path" value="app_login">                            
                            <div class="row">&nbsp;</div>
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12 text-right">
                                    <button class='btn btn-primary' type="submit" >Entrar</button>
                                </div>
                            </div>


                    </div>
                </div>
            </div>
        </div>
    </form>

