{% extends 'base.html.twig' %}

{% block title %}Entrada al sistema{% endblock %}
{% block stylesheets %}
            <style>
                .sidebar {
                    position: fixed;
                    top: 0;
                    bottom: 0;
                    left: 0;
                    z-index: 100;
                    padding: 48px 0 0;
                    box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
                }
                
                .sidebar .sidebar-sticky {
                    position: relative;
                    top: 0;
                    height: calc(100vh - 48px);
                    padding-top: .5rem;
                    overflow-x: hidden;
                    overflow-y: auto;
                }
                
                .main {
                    padding-top: 48px;
                }
                
                /* Estilos para el menú lateral expandido */
                .sidebar.active {
                    left: -250px; /* Oculta el menú lateral */
                }
                
                /* Estilos para el botón de expandir */
                #sidebarCollapse {
                    position: fixed;
                    top: 10px;
                    left: 10px;
                    z-index: 999;
                }         
                
                .login_card {
                vertical-align: middle !important;
                width:300px !important;
                left:15px !important;
                  box-shadow: 0 0 0 15px rgba(0, 0, 0, 0.1);
                }
                .centrado {
                    position: absolute !important;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }         
                .btn-primary{
                    background-color: #1b262c; /* Un azul bonito */
                    color: white; /* Texto blanco para que contraste */
                    border-color : #1b262c;
                    border-radius : 15px;                   
                }       
                </style>
        {% endblock %}
